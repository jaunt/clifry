{
  "name": "@danglingdev/clifry",
  "version": "0.0.6",
  "description": "CLI Functional Testing tool powered by Node.JS",
  "main": "./lib/clifry.js",
  "scripts": {
    "start": "node lib/clify.js",
    "nodewatch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/clifry.ts",
    "prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('git-tag-version')()) + ';'\" > src/version.ts",
    "postbuild": "typedoc src/api.ts --excludeInternal --excludePrivate",
    "build": "tsc",
    "test": "echo \"No test specified\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaunt/clifry.git"
  },
  "keywords": [
    "cli",
    "functional testing",
    "regression testing"
  ],
  "author": "Stephen Evans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaunt/clifry/issues"
  },
  "homepage": "https://github.com/jaunt/clifry#readme",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "git-tag-version": "^1.3.1",
    "nodemon": "^2.0.14",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@danglingdev/shared-ts": "~0.0.2",
    "chalk": "^4.1.2",
    "commander": "^8.3.0"
  },
  "bin": {
    "clifry": "lib/clifry.js"
  },
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  }
}
